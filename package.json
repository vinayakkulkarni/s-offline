  "types": "types/index.d.ts",
  "main": "dist/s-offline.cjs.js",
  "module": "dist/s-offline.esm.js",
  "unpkg": "dist/s-offline.min.js",
  "jsdelivr": "dist/s-offline.min.js",
  "cdn": "dist/s-offline.js",
