    "dist",
    "types"
  ],
  "scripts": {
    "build": "rimraf dist && npm run bundle && npm run bundle:min",
    "bundle": "rollup -c build/rollup.config.ts",
    "bundle:min": "rollup -c build/rollup.config.min.ts",
    "test": "echo 'test!'",
    "prepare": "husky install",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:css",
    "lintfix": "npm run lint:prettier:fix && npm run lint:eslint:fix && npm run lint:css:fix",
    "lint:js": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint './src/**/*.{js,ts,svelte}' --ignore-path .gitignore",
    "lint:eslint:fix": "eslint --fix './src/**/*.{js,ts,svelte}' --ignore-path .gitignore",
    "lint:prettier": "prettier --check \"{,!(node_modules|example|shims|dist)/**/}*.{js,ts,svelte}\" --ignore-path .gitignore",
    "lint:prettier:fix": "prettier --write \"{,!(node_modules|example|shims|dist)/**/}*.{js,ts,svelte}\" --ignore-path .gitignore",
    "lint:css": "stylelint \"{,!(node_modules|example|shims|dist)/**/}*.{css,scss,svelte}\" --ignore-path .gitignore",
    "lint:css:fix": "stylelint --fix \"{,!(node_modules|example|shims|dist)/**/}*.{css,scss,svelte}\" --ignore-path .gitignore",
    "lint-staged": "lint-staged",
    "release": "shipjs prepare",
    "release:auto": "shipjs prepare --yes",
    "release:dry": "shipjs prepare --dry-run"
  },
  "dependencies": {
    "ping.js": "^0.3.0"
